version: '2'

services:
  transmission-openvpn:
    container_name: transmission
    hostname: transmission
    restart: unless-stopped
    environment:
      - CREATE_TUN_DEVICE=true
      - WEBPROXY_ENABLED=false
      - LOCAL_NETWORK=192.168.1.0/24
      - TZ=
      
      - OPENVPN_PROVIDER=
      - OPENVPN_CONFIG=
      - OPENVPN_USERNAME=
      - OPENVPN_PASSWORD=
      
     #- VPN_SERVER_SPECIFIC_SETTINGS_HERE
      
      - TRANSMISSION_DOWNLOAD_DIR="/mnt/downloads/complete"
      - TRANSMISSION_INCOMPLETE_DIR="/mnt/downloads/incomplete"
      - TRANSMISSION_INCOMPLETE_DIR_ENABLED="true"
      
      - TRANSMISSION_PEER_LIMIT_GLOBAL=256
      - TRANSMISSION_PEER_LIMIT_PER_TORRENT=32
      - TRANSMISSION_PEER_SOCKET_TOS="lowcost"
      
      - TRANSMISSION_PEER_PORT=51413
      - TRANSMISSION_PORT_FORWARDING_ENABLED=false
      
      - TRANSMISSION_DOWNLOAD_QUEUE_SIZE=16
      - TRANSMISSION_QUEUE_STALLED_MINUTES=90
      
      - TRANSMISSION_IDLE_SEEDING_LIMIT_ENABLED=true
      - TRANSMISSION_IDLE_SEEDING_LIMIT=720
      - TRANSMISSION_RATIO_LIMIT_ENABLED=true
      - TRANSMISSION_RATIO_LIMIT=2

      - TRANSMISSION_WEB_UI=flood-for-transmission
      
    security_opt:
      - seccomp:unconfined
    dns:
      - 192.168.1.16
      - 192.168.1.17
    volumes:
      - /mnt/torrent_downloads:/mnt/downloads
      - /mnt/appdata/transmission/config:/config
    ports:
      - 9091:9091
    cap_add:
      - NET_ADMIN
    logging:
      driver: gelf
      options:
        gelf-address: 'udp://192.168.1.101:12201'  
    image: haugene/transmission-openvpn
